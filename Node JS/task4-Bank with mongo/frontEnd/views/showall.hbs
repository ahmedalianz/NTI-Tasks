<div>
    {{>header}} <br>
    {{>navbar}} <br>
    <section class="container-fluid my-3">
        <table class="table table-info table-striped">
            <thead>
                <th>acc Number</th>
                <th>name</th>
                <th class='text-center'>Actions</th>
            </thead>
            <tbody>
                {{#if noData}}
                <tr class="alert alert-danger">
                    <td colspan="5">
                        no users yet
                    </td>
                </tr>
                {{else}}
                {{#each allUsers}}
                <tr scope='row'></tr>
                <td>{{this.id}}</td>
                <td>{{this.name}}</td>
                <td class='text-center'>
                    <a href="/single/{{this.id}}" class="btn btn-primary mx-2">show</a>
                    <a href="/edit/{{this.id}}" class="btn btn-warning mx-2">edit</a>
                    <a href="/addB/{{this.id}}" class="btn btn-success mx-2">add balance</a>
                    <a href="/withdrawB/{{this.id}}" class="btn btn-danger mx-2">withdraw</a>
                </td>
                {{/each}}
                {{/if}}
            </tbody>
        </table>
    </section>
    {{>footer}} <br>
</div>